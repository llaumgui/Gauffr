{use $count, $limit, $offset, $url}
{var $pageCount = math_ceil( $count / $limit ),
     $pageCurrent = math_ceil( $offset / $limit ) + 1,
     $i = 1
}
{if $pageCount > 1}
<ul class="navigator">
    {while $i <= $pageCount}
        {if $pageCurrent == $i}
    <li class="current">{$i}</li>
        {else}
    <li><a href="{$url}offset={$limit * ($i-1)}">{$i}</a></li>
        {/if}
        {$i++}
    {/while}
</ul>
{/if}